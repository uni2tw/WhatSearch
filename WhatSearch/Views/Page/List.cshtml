@using WhatSearch.Controllers
@model PageController.PageListModel
@using WhatSearch.Utility
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />


    <title>@Helper.GetProductVersion(true)</title>

    <!-- Bootstrap core CSS -->
    <link type="text/css" rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link type="text/css" rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Custom styles for this template -->
    <style type="text/css">
        body {
            padding-top: 50px;
            padding-bottom: 20px;
            font-size: 11px;
        }
        td.fs-cell i {
            font-size: 24px;
        }
        td.fs-cell i span {
            font-size: 9px;
            height: 20px;
            color: black;
            padding-left: 6px;
        }

        td.folder-cell i {
            color: orange;
        }
        td.file-video-cell i {
            color: orange;
        }
        td.file-audio-cell i {
            color: orange;
        }
        td.file-cell i {
            color: orange;
        }
        td.file-photo-cell i {
            color: orange;
        }
        td.file-text-cell i {
            color:orange;
        }


        td.folder-item {
            vertical-align:bottom !important;
        }
        td.folder-item span {
            height:20px;
            display:inline-block;
        }
        #searchResult tr {
            cursor:pointer;
        }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script defer src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            $.ajax({
                type: "POST",
                url: "/api/folder",
                data: JSON.stringify({ 'p': '' }),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (res) {
                    $('#searchResult>tbody').empty();
                    for (var k in res.items) {
                        var item = res.items[k];
                        window.renderFolder(
                            item.id,
                            item.title,
                            item.modify,
                            item.type,
                            item.size);
                    }
                    $('p', 'footer').text(res.message);
                }
            });




            $('#searchResult').on('click', 'tr', function () {
                alert('click');
            });


        });
    </script>

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">@Helper.GetProductVersion(false)</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <form class="navbar-form navbar-right" method="post">
                    <div class="form-group">
                        <input type="text" placeholder="什麼" id="keyword" name="keyword" class="form-control">
                    </div>
                    <button id="btnSearch" type="button" class="btn btn-success">搜尋</button>
                </form>
            </div><!--/.navbar-collapse -->
        </div>
    </nav>

    <div id="main" class="container">

        <!-- Example row of columns -->
        <div id="searchList">
            <table class="table table-hover" id="searchResult">
                <thead>
                    <tr>
                        <th>名稱</th>
                        <th>修改日期</th>
                        <th>類型</th>
                        <th>大小</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>

        <footer>
            <p style="text-align:right"></p>
        </footer>
    </div> <!-- /container -->
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->    
    <script type="text/javascript">
    $(document).ready(function () {
        $('#keyword').keypress(function(evt) {
            if (evt.keyCode === 13) {
                $('#btnSearch').trigger('click');
                return false;
            }
        }).click(function() {
            $(this).select();
        });
        $('#btnSearch').click(function () {
            var keyword = $('#keyword').val();
            console.log('data:' + JSON.stringify({ 'q': keyword }));
            $.ajax({
                type: "POST",
                url: "/api/search",
                data: JSON.stringify({ 'q': keyword }),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (res) {
                    $('#searchResult>tbody').empty();
                    for (var k in res.items) {
                        var item = res.items[k];
                        window.renderFolder(
                            item.id,
                            item.title,
                            item.modify,
                            item.type,
                            item.size);                        
                    }
                    //$('p', 'footer').text(res.items.length + ' files.');
                    $('p', 'footer').text(res.message);
                }
            });
        });
        window.renderFolder = function (id, file, modify, type, size) {
            var row = $('<tr data-fid="' + id + '" class="folder"></tr>');


            if (type == "檔案資料夾") {
                $(row).append('<td class="fs-cell folder-cell"><i class="fa fa-folder-open"><span>'
                    + file + '</span></i></td>');
            } else if (type == "影片") {
                $(row).append('<td class="fs-cell file-video-cell"><i class="fa fa-file-video-o"><span>'
                    + file + '</span></i></td>');
            } else if (type == "音樂") {
                $(row).append('<td class="fs-cell file-audio-cell"><i class="fa fa-file-audio-o"><span>'
                    + file + '</span></i></td>');
            } else if (type == "圖片") {
                $(row).append('<td class="fs-cell file-photo-cell"><i class="fa fa-file-photo-o"><span>'
                    + file + '</span></i></td>');
            } else if (type == "文件檔") {
                $(row).append('<td class="fs-cell file-text-cell"><i class="fa fa-file-text-o"><span>'
                    + file + '</span></i></td>');
            } else {
                $(row).append('<td class="fs-cell file-cell"><i class="fa fa-file"><span>'
                    + file + '</span></i></td>');
            }
            //


            $(row).append('<td class="folder-item"><span>' + modify + '</span></td>');


            $(row).append('<td class="folder-item"><span>' + type + '</span></td>');
            $(row).append('<td class="folder-item"><span>' + size + '</span></td>');
            $('#searchResult>tbody').append(row);
        };
    });
    </script>

</body>
</html>
